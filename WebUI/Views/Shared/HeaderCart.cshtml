@model List<WebUI.Models.CartItem>
@{
    var total = (decimal)ViewBag.total;
}

<div class="cart box_1">
    <a href="/gio-hang/">
        <h3>
            <div class="total">
                <span> @total (đ)</span>
                <span>( @Model.Count SP)</span>
            </div>
            <img src="~/Assets/Client/images/cart.png" alt="" />
        </h3>
    </a>
    @if (Model.Count == 0) {
        <p><a href="/gio-hang/" class="simpleCart_empty"> Giỏ hàng trống </a></p>
    }

</div>
