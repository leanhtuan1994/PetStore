@model IEnumerable<Domain.EF.Menu>
@{
    var checkUser = Session[WebUI.Common.CommonConstant.USER_SESSION] != null ? true : false;
    var user = new WebUI.Common.UserLogin();
    if ( checkUser ) {
       user = (WebUI.Common.UserLogin)Session[WebUI.Common.CommonConstant.USER_SESSION];
    }
}

<div class="header-top">
    <div class="container">
        <div class="search">
            <form>
                <input type="text" value="Tìm kiếm" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Tìm kiếm';}">
                <a href="#"> <span class="glyphicon glyphicon-search"></span> </a>
            </form>
        </div>
        <div class="header-left">
            <ul>
                @if (checkUser == false) {
                    foreach (var item in Model) {
                        <li><a href="@item.Link" target="@item.Target"> @item.Text </a></li>
                    }
                } else {
                    <li> <a>  @user.Username </a>  </li>
                }
            </ul>

            @{ Html.RenderAction("HeaderCart", "Home");}
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>