@model IEnumerable<Domain.EF.Menu>

<div class="header-top">
    <div class="container">
        <div class="search">
            <form>
                <input type="text" value="Tìm kiếm" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Tìm kiếm';}">
                <a href="#"> <span class="glyphicon glyphicon-search"></span> </a>
            </form>
        </div>
        <div class="header-left">
            <ul>
                @foreach (var item in Model) {
                    <li><a href="@item.Link" target="@item.Target"> @item.Text </a></li>
                }
            </ul>
            <div class="cart box_1">
                <a href="checkout.html">
                    <h3>
                        <div class="total">
                            <span class="simpleCart_total"></span>
                            (<span id="simpleCart_quantity" class="simpleCart_quantity"></span> Con)
                        </div>
                        <img src="~/Assets/Client/images/cart.png" alt="" />
                    </h3>
                </a>
                <p><a href="javascript:;" class="simpleCart_empty"> Giỏ hàng trống </a></p>

            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>