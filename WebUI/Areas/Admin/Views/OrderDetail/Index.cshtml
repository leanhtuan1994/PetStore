@model PagedList.IPagedList<Domain.EF.OrderDetail>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header { Danh Sách Chi Tiết Đơn Hàng }

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Orders.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].DisplayOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Orders.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new {  orderID=item.OrderID, productID=item.ProductID  }, htmlAttributes: new { @class = "btn btn-default" }) |
            @Html.ActionLink("Chi Tiết", "Details", new { orderID = item.OrderID, productID = item.ProductID }, htmlAttributes: new { @class = "btn btn-success" }) |
            @Html.ActionLink("Xóa", "Delete", new { orderID = item.OrderID, productID = item.ProductID }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
