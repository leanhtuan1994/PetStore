@model PagedList.IPagedList<Domain.EF.ProductCategory>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header { Danh Mục Sản Phẩm }

<p>
    @Html.ActionLink("Thêm mới", "Create", null, htmlAttributes: new { @class="btn btn-default"})
</p>
<table class="table">
    <tr>      
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].MetaTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].DisplayOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].SeoTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].ModifiedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].ModifiedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].MetaKeywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].MetaDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].ShowOnHome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>      
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MetaTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeoTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MetaKeywords)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MetaDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowOnHome)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
